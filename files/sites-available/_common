
listen 80;

# process php files
location ~ \.php$ {
    try_files $uri =404;
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass unix:/var/run/php/php7.1-fpm.sock;
    fastcgi_index index.php;
    include fastcgi.conf;
}

# disable log for asset files
location ~* \.(jpg|jpeg|gif|css|png|js|ico|html|eot|otf|tff|woff|woff2)$ {
    access_log off;
    log_not_found off;
}

# robots.txt
location = /robots.txt {
    allow all;
    access_log off;
    log_not_found off;
}

# prevent access to htaccess/htpasswd
location ~ /\.ht {
    deny all;
    access_log off;
    log_not_found off;
}